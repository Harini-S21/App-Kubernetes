pipeline {
    agent any
    
    environment {
        DOCKER_CREDENTIALS_ID = 'dockerhub-credentials'
        KUBE_CONFIG = '/home/harini/.kube/config'
    }
    
    stages {
        stage('Build') {
            steps {
                script {
                    docker.build('simple-interest-calculator:latest', '.')
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                        docker.image('simple-interest-calculator:latest').push('latest')
                    }
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh 'kubectl apply -f kubernetes/deployment.yaml --kubeconfig=$KUBE_CONFIG'
                    sh 'kubectl apply -f kubernetes/service.yaml --kubeconfig=$KUBE_CONFIG'
                }
            }
        }
    }
}
